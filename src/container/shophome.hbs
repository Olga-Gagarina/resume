<div class="row p-5">

    <div class="card mb-5">


        {{#with navigation}}
        <ul class="nav p-3">

            {{#each links}}
            {{#if @last}}
            <div class="nav-item ">
                <a href=" {{href}}" target="_blank" class="nav-link disabled"> {{text}} </a>

            </div>
            {{else}}
            <div class="nav-item ">
                <a href=" {{href}}" target="_blank" class="nav-link active"> {{text}} </a>

            </div>
            {{/if}}

            {{/each}}
        </ul>
        {{/with}}
    </div>
    <section>

        {{#with newsBlock}}
        <h3 class="text-center mb-3"> {{title}} </h3>

        <div class="row">

            {{#each cards}}
            <div class=" col-3">
                <div class="card mb-5">
                    <div class="card-header">{{title}}

                        <div> {{#if isTop}}
                            {{!-- <span class="badge text-bg-warning text-uppercase ms-2 rounded-pill">Summary</span>
                            --}}
                            <span class="badge text-bg-danger rounded-pill">Top</span>
                            {{/if}}
                        </div>
                        {{#if isNew}}
                        <span class="badge text-bg-success rounded-pill">NEW</span>
                        {{/if}}



                    </div>
                    <div class="card-body"> {{description}} </div>
                </div>
            </div>
            {{/each}}

        </div>


        {{/with}}

    </section>
    <hr>
    <section>

        {{#with goodsBlock}}
        <div class="nav nav-tabs">
            {{#each tabs}}
            <div class="nav-item  mt-5">
                {{#unless isDisabled}}

                {{#if isActive}}
                <div class=" nav-item nav-link  active">{{text}}
                </div>
                {{else}}
                <div class="nav-item nav-link text-primary disabled ">{{text}}
                </div>
                {{/if}}
                {{/unless}}
                {{#if isDisabled}}
                <div class=" nav-item nav-link disabled text-secondary"> {{text}} </div>
                {{/if }}
            </div>
            {{/each}}
        </div>


        <div class="row">

            {{#each cards}}
            <div class=" col-4">
                <div class="card  mt-4 mb-4">

                    <img src="{{image}}" class="card-img-top" alt="photo">

                    <div class="card-body">
                        <div class="card-title">
                            {{title}}
                            {{#if isHot}}
                            <span class="badge text-bg-warning rounded-pill">HOT!</span>
                            {{/if}}
                            {{#if isNew}}
                            <span class="badge text-bg-primary rounded-pill">NEW</span>
                            {{/if}}
                        </div>
                        <p> {{description }} </p>
                    </div>
                </div>

            </div>

            {{/each}}
        </div>
        {{/with}}
    </section>
    <hr>

    <section>
        {{#with subscribe }}
        <div class="alert alert-dark">
            <h2 class="text-light text-title"> {{header}} </h2>
            <p class="text-light"> {{description}} </p>

            {{#each buttons}}
            <li href="{{link}}" class="btn btn-primary m-1"> {{text}} </li> <br>

            {{/each}}

        </div>
        {{/with}}
    </section>
    <hr>
    <section>
        {{#with service}}
        <div class="card text-bg-success text-center mb-5">
            <div class="card-body m-2">
                <h2 class="text-light  text-title"> {{title}} </h2>
                <p class="text-light"> {{description}} </p>
                {{#each buttons}}
                <div href="{{link}}" class="btn btn-primary ">{{text}}<div>
                        {{/each}}
                    </div>
                </div>
                {{/with}}
    </section>
    <section>

        <div class="row">

            {{#each footer}}
            <div class=" col-2">
                <div class="">
                    <div class="nav">
                        <ul class="nav-item">
                            {{#each this}}


                            {{#if @last}}
                            <li class="nav-link desabled text-secondary" target="_blank">{{text}} </li>
                            {{else}}
                            <li class="nav-link active" target="_blank" href="{{link}}">{{text}} </li>
                            {{/if}}





                            {{/each}}
                        </ul>
                    </div>




                </div>

            </div>

            {{/each}}
        </div>


    </section>

</div>
{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>

    {{#with main}}
    <main>
        <section>
            {{>title data = " Work history" big=true}}


            <ul>
                {{#each works}}
                <li>
                    <div>{{position}}</div>

                    <br>
                    <div>{{duration.from}}
                        -
                        {{#if duration.to}}
                        {{duration.to}}
                        {{else}}
                        (досі працюю)
                        {{/if}}
                    </div>
                    <br>

                    {{#if company.url}}
                    {{>link text=company.name href=company.url blank=true noLine=true}}

                    {{else}}
                    <b> {{company.name}} </b>
                    {{/if}}

                    <br>
                    <br>
                    <div>
                        <strong>Projects ({{projectAmount}})</strong>
                    </div>
                    <br>
                    <ul>
                        {{#each projects}}
                        <li>
                            <div> {{>link text=name href=url blank=true noLine=true}}</div>
                            <br>

                            <div>
                                <p>{{ about}}</p>
                            </div>

                            <br>
                            <div>
                                <ul>
                                    <div><em>Project stacks: ({{stackAmoGnt}}) </em></div>
                                    <br>
                                    {{#each stacks}}
                                    <li>
                                        {{name}}
                                    </li>
                                    {{/each}}
                                </ul>
                            </div>
                            <br>
                            <ul>
                                <div><em> Project awards:</em></div>
                                {{#each awards}}
                                <li>
                                    {{name}}
                                </li>
                                {{/each}}
                            </ul>
                            <br>
                        </li>
                        {{/each}}
                    </ul>
                </li>
                {{/each}}
            </ul>
        </section>
    </main>
    {{/with}}
</div>
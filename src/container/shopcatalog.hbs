<main class=" p-2">

    <div class="row ms-3 ">

        <div class="card mt-5 mb-5">


            {{#with navigation}}
            <ul class="nav p-3">

                {{#each links}}
                {{#if @last}}
                <div class="nav-item ">
                    <a href=" {{href}}" target="_blank" class="nav-link disabled"> {{text}} </a>

                </div>
                {{else}}
                <div class="nav-item ">
                    <a href=" {{href}}" target="_blank" class="nav-link active"> {{text}} </a>

                </div>
                {{/if}}

                {{/each}}
            </ul>
            {{/with}}

        </div>
    </div>
    <div class="row  ">
        <div class="col-6 ms-4">
            <div class="row  ">
                <div class="nav">
                    {{#each breadcrumb}}
                    <ol class="breadcrumb col-3 ms-1 me-1">
                        {{#if url}}
                        <li class=" breadcrumb-item">
                            <a href="{{url}}">{{name}} </a>
                        </li>
                        {{else}}
                        <li class=" breadcrumb-item ">
                            <div href="{{url}}" class="disabled ">{{name}} </div>
                        </li>
                        {{/if}}
                    </ol>
                    {{/each}}

                </div>
            </div>
        </div>
        <h1> {{header}} </h1>
        {{#each sortBlock}}
        <div class="col-3 mt-3 mb-3">

            <select class="form-select form-select-sm">
                <option selected>{{placeholder}}
                    {{#each options}}
                <option value="1">{{value}}. {{text}}


                    {{/each}}
                </option>
            </select>

        </div>
        {{/each}}
    </div> row
    <div class="row">


        <div class="col-3 m-2">
            <div class="card p-2">
                {{#with filterBlock}}
                {{#with sellers}}
                <label class="form-label">{{title}} </label>
                {{#each list}}
                <div class="form-check">
                    <input class="form-check-input" type="checkbox">
                    <label class="form-check-label">{{value}} </label>
                </div>
                {{/each}}
                {{/with}}
                <hr class="m-1 mt-3 mb-3">
                {{#with brands}}
                <label class="form-label"> {{title}} </label>

                <div class="form-control text-secondary mt-2 mb-3 "> {{input.placeholder}} </div>
                {{#each options}}
                <div class="form-check">
                    <input class="form-check-input" type="checkbox">
                    <label class="form-check-label">{{value}} </label>
                </div>
                {{/each}}
                {{/with}}
                <hr class="m-1 mt-3 mb-3">
                {{#with price}}
                <label class="form-label"> {{title}} </label>
                {{#with range}}
                <div class="form-control text-secondary mt-2 "> {{from}} </div>
                <div class="form-control text-secondary mt-3 "> {{to}} </div>
                {{/with}}
                {{#with button}}
                <div class=" col-">

                    {{!-- <a href="{{link}} " target="_blank"> --}}
                        <div> <a href="{{link}}" class="btn  btn-outline-secondary mt-3 ">{{text}} </a></div>


                </div>
                {{/with}}
                {{/with}}
                <hr class="m-1 mt-3 mb-3">
                {{#each filterList}}
                <label class="form-label"> {{title}} </label>
                {{#each options}}
                <div class="form-check">
                    <input class="form-check-input" type="checkbox">
                    <label class="form-check-label">{{value}} </label>
                </div>

                {{/each}}
                <hr class="m-1 mt-3 mb-3">
                {{/each}}
                {{/with}}
            </div>
        </div>

        {{>cards}}
    </div>
    <section>
        {{#with service}}
        <div class="card text-bg-success text-center mt-5 mb-5">
            <div class="card-body m-2">
                <h2 class="text-light  text-title"> {{title}} </h2>
                <p class="text-light"> {{description}} </p>
                {{#each buttons}}
                <div><a href="{{link}}" class="btn btn-primary ">{{text}} </a>
                    <div>
                        {{/each}}
                    </div>
                </div>
                {{/with}}
    </section>
    <hr class="mb-3">
    <section>
        <div class="row">
            {{#each footer}}
            <div class=" col-2">
                <div class="">
                    <div class="nav">
                        <ul class="nav-item">
                            {{#each this}}
                            {{#if @last}}
                            <li class=" nav-link disabled text-secondary" href="{{link}}" target="_blank">{{text}} </li>
                            {{else}}
                            <li class="nav-link active" target="_blank" href="{{link}}">{{text}} </li>
                            {{/if}}

                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>

</main>
